source 'https://rubygems.org'

gem 'rails', '3.2.7'
gem 'bootstrap-sass'

group :production do
  # gems specifically for Heroku go here
  gem "pg"
	gem 'thin'
end
group :development do
  gem 'sqlite3'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'

  gem 'uglifier'
end

gem 'jquery-rails'

gem 'execjs'
gem 'therubyracer'

