<h1>Listing points</h1>

<div id="placeholder" style="width:900px;height:550px;"></div>
<script type="text/javascript">
$(function () {

var d4=[<% @points.each do |point| %>
[<%= point.x %>,<%= point.y %>],<% end %>];
$.plot($("#placeholder"), [ d4 ]);
});
</script>

<table>
  <tr>
    <th>X</th>
    <th>Y</th>
		<th>Triton Session ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.x %></td>
    <td><%= point.y %></td>
<td><%= point.triton_session_id %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

